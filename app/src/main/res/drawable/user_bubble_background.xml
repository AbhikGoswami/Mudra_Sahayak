<?xml version="1.0" encoding="utf-8"?>
<!-- Shape for the user's chat bubble (right side) -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- A modern, attractive blue gradient -->
    <gradient
        android:startColor="#4D82E8"
        android:endColor="#2E66D6"
        android:angle="180" />

    <!-- Rounded corners to create the bubble effect. The top-right corner is less rounded to create a "tail". -->
    <corners
        android:bottomLeftRadius="24dp"
        android:bottomRightRadius="24dp"
        android:topLeftRadius="24dp"
        android:topRightRadius="8dp" />

</shape>
